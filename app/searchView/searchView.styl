.searchView
	margin 60px auto
	text-align center
	width 310px
	h1
		color #ccc
		font-family 'Nunito', sans-serif
		font-size 20px
		font-weight 300
		margin-top 10px
		margin-bottom 30px
	input
		color #ccc
		border 1px solid #000
		font-size 14px
		height 30px
		line-height 30px
		padding 0 10px
		width 100%
	.dropdown
		border 1px solid #000
		cursor pointer
		height 0
		margin-top 3px
		overflow scroll
		transition height 300ms ease-in-out, visibility 300ms ease-in-out
		visibility hidden
		width 100%
		&.active
			height 336px
			visibility visible
		.divider
			border-bottom 1px solid #ccc
			clear both
			font-family 'Arial', sans-serif
			font-size 14px
			height 28px
			line-height 28px
			padding 0 10px
			span
				display block
				cursor pointer
				&.title
					float left
					text-align left
				&.type
					float right
					text-align right
					color #ccc
			
			